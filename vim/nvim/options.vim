" encoding
set fileencodings=ucs-bom,utf-8,gb18030,gbk,gb2312,cp936,default,latin1
" line number
set number
set relativenumber
set numberwidth=1
" <Tab> settings
set expandtab
set tabstop=2
set shiftwidth=2
set autoindent
" no wrap long line
set nowrap
" no backup file
set nobackup
" leader key
let mapleader=" "
let maplocalleader=" "
